{
    "compilerOptions": {
        "moduleResolution": "node",
        "lib": ["es2015"],
        "target": "es2015",
        "module":"commonjs",
        "esModuleInterop": true,
        "strict": true,
        "sourceMap": false,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "declaration": true,
        "outDir": "dist",
        "keyofStringsOnly": true,
        "skipLibCheck": true
    },
    "include":[
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}
